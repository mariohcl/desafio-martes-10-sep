<div class="container wrap-main">

  <div class="row mb-5">
    <div class="col-md-7">
      <p id="notice"><%= notice %></p>
      <p class="info-cat">
        <strong>Nombre:</strong>
        <span><%= @category.name %></span>
      </p>
      <%= link_to 'Editar', edit_category_path(@category), :class => 'btn btn-warning' %>
      <%= link_to 'Volver', categories_path, :class => 'btn btn-danger' %>
    </div>

    <div class="col-md-5  p-0">

      <h1 class="title">Crear un producto</h1>
      <div class="p-0">
        <%= form_with(model: [ @category, @products ]) do |form| %>
        <div class="form-group">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :price, "Precio" %>
          <%= form.text_field :price, :class => "form-control" %>
        </div>

        <%= form.submit "Guardar", :class => "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>


<div class="row mb-5">
  <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope= "col"> Nombre</th>
          <th scope= "col"> Precio</th>
          <th scope= "col"> Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @category.products.each do |f| %>
        <tr>
          <td class="align-middle"><%= f.name %></td>
          <td class="align-middle"><%= f.price %></td>
          <td> <%= link_to "eliminar", category_product_path(@category, f), method: :delete, :class => 'btn btn-danger'%></td>
        </tr>

        <% end %>
      </tbody>
  </table>
</div>
