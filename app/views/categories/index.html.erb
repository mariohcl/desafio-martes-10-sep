<div class="container wrap-main">
  <p id="notice"><%= notice %></p>


  <h1 class="title">Categorias</h1>

  <table class="table table-bordered table-dark">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="align-middle"><%= link_to category.name, category %> </td>
          <td class="align-middle text-center"><%= category.products.count %></td>
          <td class="text-center"><%= link_to 'Editar', edit_category_path(category), :class => 'btn btn-warning' %></td>
          <td class="text-center"><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

